<div id="doc-info" class="sheet-doc-info" style="top:0px;">
  <h2 class="dark-blue"><%= @archivo.nombre %></h2>
  <strong class="dark-grey">
    <%= @archivo.archivo_excel_file_name %> 
    <span class="green" style="font-size: 1.1em"><%= @archivo.archivo_excel_file_size.to_byte_size %></span>
  </strong>
  <div style="clear:both"></div>
</div>
<div id="toolbar" class="sheet-toolbar">
  <div id="areas-importacion">
    <ul>
      <li><a href="#" id="area-importar">Area</a></li>
      <li><a href="#" id="area-titular">Titular</a></li>
      <li><a href="#" id="area-encabezado">Encabezado</a></li>
      <li><a href="#" id="area-descartar">Descartar</a></li>
    </ul>

    <button id="propiedades">Propiedades</button>
    <button id="salvar">Salvar</button>
    <button id="guardar-como">Guardar como</button>

    <div class="forma_areas">
      <label>Areas:</label>
      <%= select_tag("area", %(<option value="disabled" class="disabled">Deseleccionar</option>
          #{options_from_collection_for_select(@hoja.areas, 'id', 'nombre')} ) )  %>
    </div>
  </div>


</div>

