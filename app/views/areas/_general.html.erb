<% f.inputs do %>
  <%= f.input :hoja_id, :as => :hidden %>
  <%= f.input :nombre, :input_html => {:size => 40} %>
  <%= f.input :celda_inicial, :as => :hidden %>
  <%= f.input :celda_final, :as => :hidden %>
  <%= f.input :rango_filas, :input_html => {:size => 2} %>
  <%= f.input :rango_columnas, :input_html => {:size => 2} %>
  <%= f.input :fija, :label => 'Área fija', :hint => 'Indica si es que la dimención del área es fija o varia por los datos' %>
  <%= f.input :iterar_fila, :as => :radio, :collection => Area::FILAS, :label => 'Iterar', :hint => 'Indica si itera fila o columna' %>
<% end %>
